{
  "name": "fast-food-api",
  "version": "1.0.0",
  "description": "Fast Food API with Express and Prisma",
  "main": "src/index.ts",
  "volta": {
    "node": "22.0.0"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
    "dev:setup": "npx prisma generate && npx prisma db push && npm run db:seed && npm run dev",
    "build": "tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "build:test": "tsc --project tsconfig.test.json && tsc-alias -p tsconfig.test.json",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts --max-warnings 0",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "ci": "npm run type-check && npm run lint && npm run format:check && npm run test:coverage",
    "db:seed": "ts-node src/infrastructure/database/prisma/seed.ts",
    "db:seed:force": "ts-node src/infrastructure/database/prisma/seed-force.ts",
    "db:push": "prisma db push",
    "db:generate": "prisma generate",
    "db:reset": "prisma db push --force-reset && npm run db:seed",
    "db:studio": "prisma studio",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "start:prod": "npm run db:generate && npm run db:migrate:deploy && npm start"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/uuid": "^10.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "mercadopago": "^2.8.0",
    "qrcode": "^1.5.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.4",
    "@types/qrcode": "^1.5.5",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-prettier": "5.5.3",
    "jest": "^29.5.0",
    "prettier": "3.6.2",
    "prisma": "^5.10.0",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "prisma": {
    "schema": "src/infrastructure/database/prisma/schema.prisma",
    "seed": "ts-node src/infrastructure/database/prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
