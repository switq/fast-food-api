{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"],
      "@tests/*": ["tests/*"]
    },
    "baseUrl": "./"
  },
  "include": [
    "src/**/*",
    "src/infrastructure/database/prisma/prisma",
    "tests/infrastructure/database/prisma/implementations/repositoryImplementationTests.ts"
  ],
  "exclude": ["node_modules"]
}
